<div class='container px-5 px-sm-0'>
	<div class='row'>
      <div class='col-md-3'>
        <h2>User info</h2>
        <table class='table'>
        <tr>
            <%= image_tag 'default-image.jpg' %>  <!-- 固定値 -->
        </tr>
        <tr>
            <th>name</th>
            <th><%= @user.name %></th>  <!-- 固定値 -->
        </tr>
        <tr>
            <th>introduction</th>
            <th></th>  <!-- 固定値 -->
        </tr>
        </table>　
        <div class='row'>
          <a href="<%= user_path(current_user.id) %>/edit" role="button" class="btn btn-outline-secondary btn-block"><i class="fa-solid fa-user-gear"></i></a>
        </div>
        
        <h2 class="mt-3">New book</h2>
        <%= form_with model: @book, local: true do |f| %>
          <div class="form-group">
            <h4 class="left-align">Title</h4>
            <%= f.text_field :title, class: "form-control book_title", style: "outline: thick double #c0c0c0" %>
          </div>
        
          <div class="form-group">
            <h4 class="left-align">Opinion</h4>
            <%= f.text_area :body, class: "form-control book_body", style: "outline: thick double #c0c0c0" %>
          </div>
        
          <%= f.submit "Create Book", class: "btn btn-info btn-lg" %>
        <% end %>
      </div>
      <div class='col-md-8 offset-md-1'>
        
          <h2>Books</h2>
          <table class='table table-hover table-inverse'>
            <thead>
              <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% if Book.all %>
                <% Book.all.each do |book| %>
                  <tr>
                    <td></td>
                    <td class="th-title"><%= book.title %></td>
                    <td class="th-body"><%= book.body %>
                    </td>
                  </tr>
                <% end %>
              <% else %>
                <%= p "まだ投稿されていません" %>
              <% end %>
            </tbody>
          </table>
      </div>
	</div>
</div>