<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2 style="margin-bottom: 30px;">User info</h2>
      <%= form_with model: @user do |f| %>
      <div class="field" style="margin-bottom: 30px;">
        <label for="inputName">Name</label><br />
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name", class: "form-control" %>
      </div>
      <div class="field" style="margin-bottom: 30px;">
        <label for="inputImage">Image</label><br />
        <%= f.file_field :profile_image, placeholder: "Image", accept: "image/*" %>
      </div>
      <div class="field" style="margin-bottom: 30px;">
        <label for="inputIntroduction">Introduction</label><br />
        <%= f.text_area :introduction, id:"inputIntroduction", placeholder:"Introduction", class: "form-control" %>
      </div>
       <button class="btn btn-dark" type="submit" style="margin-bottom: 30px;">Update User</button>
      <% end %>
    <br />
    </div>
  </div>
</div>