<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>Current User Info</h2>
      <table class='table'>
        <tr>
          <% if @current_user.profile_image.attached? %>
            <%= image_tag @current_user.profile_image, size: "100x100" %>
          <% else %>
            <%= image_tag 'default-image.jpg', size: "100x100" %>
          <% end %>
        </tr>
        <tr>
          <th>Name</th>
          <th><%= @current_user.name %></th>
        </tr>
        <tr>
          <th>Introduction</th>
          <th><%= @current_user.introduction %></th>
        </tr>
      </table>ã€€
      <div class='row'>
        <a href="<%= edit_user_path(@current_user) %>" role="button" class="btn btn-outline-secondary btn-block"><i class="fa-solid fa-user-gear"></i></a>
      </div>

      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book, local: true do |f| %>
        <div class="form-group">
          <h4 class="left-align">Title</h4>
          <%= f.text_field :title, class: "form-control book_title", style: "outline: thick double #c0c0c0" %>
        </div>
      
        <div class="form-group">
          <h4 class="left-align">Opinion</h4>
          <%= f.text_area :body, class: "form-control book_body", style: "outline: thick double #c0c0c0" %>
        </div>
      
        <%= f.submit "Create Book", class: "btn btn-info btn-lg" %>
      <% end %>
    </div>

    <div class='col-md-8 offset-md-1'>
      <h2>Users</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <% if user.profile_image.attached? %>
                  <%= image_tag user.profile_image, size: "80x80" %>
                <% else %>
                  <%= image_tag 'default-image.jpg', size: "80x80" %>
                <% end %>
              </td>
              <td><%= user.name %></td>
              <td>
                <%= link_to 'Show', user_path(user), class: 'btn btn-primary' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>