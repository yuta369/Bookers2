<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <%= render 'users/user_info', user: @current_user, title: 'User Info' %>
      <%= render 'books/new_book_form', book: @book %>
    </div>

    <div class='col-md-8 offset-md-1'>
      <h2>Users</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <% if user.profile_image.attached? %>
                  <%= link_to user_path(user) do %>
                    <%= image_tag user.display_image, loading: "lazy", size: "80x80" %>
                  <% end %>
                <% else %>
                  <%= link_to user_path(user) do %>
                    <%= image_tag 'default-image.jpg', size: "80x80" %>
                  <% end %>
                <% end %>
              </td>
              <td><%= user.name %></td>
              <td>
                <%= link_to 'Show', user_path(user), class: 'btn btn-primary' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>