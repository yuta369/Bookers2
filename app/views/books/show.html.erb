<div class='container px-5 px-sm-0'>
	<div class='row'>
      <div class='col-md-3'>
        <h2>User info</h2>
        <table class='table'>
        <tr>
            <%= image_tag 'default-image.jpg' %>  <!-- 固定値 -->
        </tr>
        <tr>
            <th>name</th>
            <th>yuta</th>  <!-- 固定値 -->
        </tr>
        <tr>
            <th>introduction</th>
            <th></th>  <!-- 固定値 -->
        </tr>
        </table>　
        <div class='row'>
          <a href="<%= user_path(current_user.id) %>/edit" role="button" class="btn btn-outline-secondary btn-block"><i class="fa-solid fa-user-gear"></i></a>
        </div>
        <h2 class="mt-3">New book</h2>
        <%= form_with model: @book do |f| %>
          <div class="form-group">
            <h4 class="left-align">Title</h4>
            <input class="form-control book_title" style="outline: thick double #c0c0c0" type="text">
          </div>
    
          <div class="form-group">
            <h4 class="left-align">Opinion</h4>
            <textarea class="form-control book_body" style="outline: thick double #c0c0c0"></textarea>
          </div>
  
          <input type="submit" name="commit" value="Create Book" class="btn btn-info btn-lg" data-disable-with="Create Book">
  
      <% end %>
      </div>
      <div class='col-md-8 offset-md-1'>
          <h2>Book detail</h2>
          <div class="table-m">
            <table>
              <% if Book.all %>
            
                <% Book.all.each do |book| %>
                  <tr>
                    <td class="th-title"><%= book.title %></td>
                    <td class="th-body"><%= book.body %>
                    </td>
                  </tr>
                <% end %>
            </table>
              <% else %>
                <%= p "まだ投稿されていません" %>
              <% end %>
            </div>
          <table class='table table-hover table-inverse'>
          <thead>
              <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
              </tr>
          </thead>
          <tbody></tbody>
          </table>
      </div>
	</div>
</div>