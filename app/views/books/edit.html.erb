<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2 style="margin-bottom: 30px;">Editing Book</h2>
      <%= form_with model: @book do |f| %>
      <div class="field" style="margin-bottom: 30px;">
        <label for="inputTitle">Title</label><br />
        <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"Title", class: "form-control" %>
      </div>
      <div class="field" style="margin-bottom: 30px;">
        <label for="Opinion">Opinion</label><br />
        <%= f.text_area :body, id:"inputIntroduction", placeholder:"Opinion", class: "form-control" %>
      </div>
       <%= f.submit "Update Book", class: "btn btn-success" %>
      <% end %>
    <br />
      <div class="link">
        <%= link_to 'Show' , book_path(@book.id) %>
        <%= p "|"%>
        <%= link_to 'Back' , '/books' %>
      </div>
    </div>
  </div>
</div>